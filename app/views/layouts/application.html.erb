<!DOCTYPE html>
<html>
<head>
  <title>Skygodlin</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
		<div class="f-right">
			<ul class="hmenu">
	    <%= render 'devise/menu/registration_items' %>
	    <%= render 'devise/menu/login_items' %>
			</ul>
		</div>
		<div class="f-clear"></div>
		<div id="header">
		</div>
		<div id="menubar">
			<div>
				<%if root_domain%>
					<%= link_to 'Home', root_path %>
				<% else%>
					<%= link_to 'Home', root_url(:account => false) %> |
					<%= link_to 'Site Home', root_path %>
				<% end%>

				<% if can? :manage, User %>
			    | <%= link_to "Invite User", new_user_invitation_path %> |
			    <%= link_to "Members", members_path %>

			  <% end %>

			</div>
		</div>
		<div id="content">
		 <div class="notice" style="color: green"><%= notice %></div>
		 <div class="alert" style="color: red"><%= alert %></div>
			<%= yield %>
		</div>
		<div id="footer">
		</div>
	</div>
	<div class="f-clear"></div>
</body>
</html>

