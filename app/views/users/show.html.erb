<h1><%= @user.name %></h1>
<p>Email: <%= @user.email %></p>
<%= link_to 'List of Users', users_path %>
<h3><%= @user.name %>'s Accounts</h3>
<table>
<% account = @user.account %>
  <tr>
    <td><%= link_to account.name, account %></td>
    <td><%= link_to "Visit #{root_url(:account => account.name)}", root_url(:account => account.name) %></td>
  </tr>
</table>
<br />
