!!!
%html
  %head
    %title Skygodlin
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      .f-right
        %ul.hmenu
          = render 'devise/menu/registration_items'
          = render 'devise/menu/login_items'
      .f-clear
      #header
      #menubar
        %div
          - if root_domain
            = link_to 'Home', root_path
          - else
            = link_to 'Home', root_url(:account => false)
            |
            \#{link_to 'Site Home', root_path}
          - if can? :manage, User
            | #{link_to "Invite User", new_user_invitation_path} |
            \#{link_to "Members", members_path}
      #content
        .notice{:style => "color: green"}= notice
        .alert{:style => "color: red"}= alert
        = yield
      #footer
    .f-clear

